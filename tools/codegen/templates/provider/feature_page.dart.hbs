import 'package:flutter/material.dart';
import 'package:provider/provider.dart';
import 'package:lumora_ui_tokens/lumora_ui_tokens.dart';
import '../notifiers/{{featureNameLower}}_notifier.dart';

/// Page widget for the {{featureName}} feature using Provider.
/// 
/// This page provides the UI for the {{featureName}} feature and manages
/// its state using the Provider pattern with ChangeNotifier. It automatically
/// loads data on initialization and handles loading, error, and loaded states.
class {{featureName}}Page extends StatelessWidget {
  const {{featureName}}Page({super.key});

  @override
  Widget build(BuildContext context) {
    return ChangeNotifierProvider(
      create: (_) => {{featureName}}Notifier()..load(),
      child: Scaffold(
        appBar: AppBar(
          title: const Text('{{featureTitle}}'),
        ),
        body: Consumer<{{featureName}}Notifier>(
          builder: (context, notifier, child) {
            // Show loading indicator while data is being fetched
            if (notifier.isLoading) {
              return const Center(
                child: CircularProgressIndicator(),
              );
            }

            // Show error message if something went wrong
            if (notifier.error != null) {
              return Center(
                child: Column(
                  mainAxisAlignment: MainAxisAlignment.center,
                  children: [
                    Icon(
                      Icons.error_outline,
                      color: LumoraColors.error,
                      size: 48,
                    ),
                    const SizedBox(height: 16),
                    Text(
                      'Error: ${notifier.error}',
                      style: LumoraTypography.bodyMedium.copyWith(
                        color: LumoraColors.error,
                      ),
                      textAlign: TextAlign.center,
                    ),
                  ],
                ),
              );
            }

            // Show content when data is loaded
            return _buildContent(context, notifier);
          },
        ),
      ),
    );
  }

  /// Builds the main content of the page when data is loaded.
  Widget _buildContent(BuildContext context, {{featureName}}Notifier notifier) {
    return {{{widgetCode}}};
  }
}
